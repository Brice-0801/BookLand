{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				<h1 class="reset_password">Réinitialisation de mot de passe</h1>
				<div class="centerForm">
					<div class="FormResetPassword">
						{{ form_start(passForm) }}
						<legend>
							Entrez votre nouveau mot de passe
						</legend>
						{{ form_row(passForm.plainPassword) }}

						<button type="submit" class="btn btn-secondary">Envoyer</button>
						<legend>
							Confirmez votre nouveau mot de passe
						</legend>
						{{ form_end(passForm) }}
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
