{% extends 'base.html.twig' %}

{% block body %}

    <main class="container">

      {% include "_partials/_caroussel.html.twig" %}

        <section class="row">
            {# <div class="col-12">
                <h1> Site e-commerce </h1>
                <p> Bienvenue dans notre boutique </p>
            </div> #}

           {% for category in categories %}
                {% if category.parent == null %}
                    <div class="col-12">
                        <h2 class="titreCatégorie">{{ category.name }} :</h2>
                    </div>
                {% else %}
                    <div class="col-4">
                        <div class="cardCatégorie">
                          <div class="card-body">
                                <h3 class="card-title">{{ category.name }}</h3>
                            <div class="buttonProduits">    
                                <a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-secondary">Voir les produits</a>
                            </div>
                          </div>
                        </div> 
                    </div>    
                {% endif %}
            {% endfor %}

        </section>
    </main>   

{% endblock %}
