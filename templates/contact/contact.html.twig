{% extends 'base.html.twig' %}

{% block title %} Contactez-nous {% endblock %}

{% block body %}
<section class="container my-3 d-flex align-items-center">           
            <div class="w-50">
              <div class="formContact">
                <h1 class="TitreContact mb-3"> Contactez-nous </h1>

                {{ form_start(formContact) }}
                    <div class="d-flex justify-content-between mb-4">
                        <div>
                            {{ form_label(formContact.lastname) }}
                            {{ form_widget(formContact.lastname) }}
                        </div>
                        <div>
                            {{ form_label(formContact.firstname) }}
                            {{ form_widget(formContact.firstname) }}
                        </div>
                    </div>

                    <div class="mb-4">
                        {{ form_label(formContact.email) }}
                        {{ form_widget(formContact.email) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(formContact.subject) }}
                        {{ form_widget(formContact.subject) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(formContact.message) }}
                        {{ form_widget(formContact.message) }}
                    </div>

                    <div class="d-flex justify-content-center mb-5">
                        <button type="submit" class="btn btn-secondary w-25">Envoyer</button>
                    </div>
                {{ form_end(formContact) }}
              </div>
            </div>

            <div class="Map">

               <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2799.587773272545!2d4.37913915264389!3d45.437810522675456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f5af5a4302d623%3A0x77b76af46a2f3e19!2sGarage404!5e0!3m2!1sfr!2sfr!4v1692342440668!5m2!1sfr!2sfr" 
               width="600" height="450" style="" allowfullscreen="" loading="lazy" 
               referrerpolicy="no-referrer-when-downgrade"></iframe>

            </div>

        
</section>

{% endblock %}
